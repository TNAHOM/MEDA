generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RegisterSolo {
  id            String   @id @default(uuid())
  name          String
  phoneNumber   Int
  tournamentId  String
  tournament    Tournament @relation(fields: [tournamentId], references: [id])
  createdAt     DateTime @default(now())
}

model RegisterTeam {
  id              String   @id @default(uuid())
  name            String
  phoneNumber     Int
  tournamentId    String
  tournament      Tournament @relation(fields: [tournamentId], references: [id])
  numberOfPlayers Int
  teamName        String
  createdAt       DateTime @default(now())
}

model Tournament{
  id              String   @id @default(uuid())
  name            String
  location        String
  locationLink    String
  Date            DateTime
  createdAt       DateTime @default(now())
  registerSolo    RegisterSolo[]
  registerTeam    RegisterTeam[]
}